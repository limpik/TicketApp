@model IEnumerable<BestBusWay.Domain.Entities.Order>

@{
    ViewBag.Title = "Админ панель: список заказов";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Создать", "Create")
</p>


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список заказов</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-right">Order date</th>
                <th class="text-right">Ticket ID</th>
                <th class="text-right">User name</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="text-right">@Html.ActionLink(Convert.ToString(item.OrderId), "Edit", new { item.OrderId})</td>
                    <td class="text-right">@item.OrderDate</td>
                    <td class="text-right">@item.TicketId</td>
                    <td class="text-right">@item.UserId</td>
                    <td class="text-center">

                        @using (Html.BeginForm("Delete", "Order"))
                        {
                            @Html.Hidden("OrderId", item.OrderId)
                            <input type="submit"
                                   class="btn btn-default btn-sm"
                                   value="Удалить" />
                        }
           
                    </td>
                </tr>
            }
        </table>
    </div>
</div>