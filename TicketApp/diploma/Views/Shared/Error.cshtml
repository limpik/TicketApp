
@model IEnumerable<string>
@{
    ViewBag.Title = "Ошибка";
}
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Что-то пошло не так. Пожалуйста, попробуйте еще раз!
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Следующие ошибки были обнаружены:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "Index", "Home", null, new { @class = "btn btn-default" })
@Html.ActionLink("Выйти", "Logout", "Account", null, new { @class = "btn btn-primary" })

