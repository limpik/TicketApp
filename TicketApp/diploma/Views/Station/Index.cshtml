@model  IEnumerable<BestBusWay.Domain.Entities.Station>

@{
    ViewBag.Title = "Админ панель: список станций";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список станций</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-right">Станция</th>
                <th class="text-right">Город</th>
                <th class="text-center">Действия</th>
            </tr>
              @foreach(var item in Model)
              { 
                <tr>
                    <td class="text-right">@Html.ActionLink(Convert.ToString(item.StationId), "Edit", new { item.StationId })</td>
                    <td class="text-right">@item.StName</td>
                    <td class="text-right">@item.City.CityName</td>
                    <td class="text-center">

                        @using (Html.BeginForm("Delete", "Station"))
                        {
                           @Html.Hidden("StationId", item.StationId)
                            <input type="submit"
                                   class="btn btn-default btn-sm"
                                   value="Удалить" />
                        }

                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить станцию", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>